{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ES2020",
		"moduleResolution": "node",
		"lib": [
			"ES2020",
			"DOM",
			"DOM.Iterable"
		],
		"outDir": "./assets/js",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"removeComments": false,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"exactOptionalPropertyTypes": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"assets/js"
	]
}